<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Header with title and navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/widget_prev_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Предыдущий день" />

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Понедельник • 15 Янв"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <ImageButton
            android:id="@+id/widget_next_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="Следующий день" />
    </LinearLayout>

    <!-- Tasks list -->
    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@color/color_divider"
        android:dividerHeight="1dp" />

    <!-- Add task button -->
    <ImageButton
        android:id="@+id/widget_add_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/widget_button_background"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Добавить задачу"
        android:padding="12dp" />

</LinearLayout>